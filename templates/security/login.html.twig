{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}


{% include "page_head/page_head.html.twig" with {'page_name': 'Formulaire de connexion'} %}

<div class="main_content">
    <div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1">
                                <h3>Connexion</h3>
                            </div>
                            <form method="post" class="ng-untouched ng-pristine ng-invalid">
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}

                                        {% if app.user %}
                                            <div class="mb-3">
                                                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                                            </div>
                                {% endif %}
                                <div class="form-group mb-3">
                                    <input type="text" required="" name="email"
                                        formcontrolname="email" placeholder="Votre e-mail"
                                        class="form-control ng-untouched ng-pristine ng-invalid" autocomplete="email" 
                                        value="{{ last_username }}" required autofocus>
                                </div>
                                <div class="form-group mb-3"><input required="" type="password"
                                        formcontrolname="password" name="password" placeholder="Mot de passe"
                                        class="form-control ng-untouched ng-pristine ng-invalid" autocomplete="current-password" required>
                                </div>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    
                                    <div class="form-group mb-3">
                                        <button type="submit" name="login" class="btn btn-fill-out btn-block">Se connecter</button>
                                    </div>
                            </form>
                                <div class="different_login">
                                    <span>ou</span>
                                </div>
                            <div class="form-note text-center">Vous n'avez pas de compte ?<a href="/register">S'inscrire maintenant</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
